        private void RefreshBotList()
        {
            lvwBots.Items.Clear();
            
            // Check all bots, remove any that have exited
            for (int i = bots.Count - 1; i >= 0; i--)
            {
                if (bots[i].Process == null || bots[i].Process.HasExited)
                {
                    // Check if this is a bot that was loaded from saved state
                    // and is still running but we need to reattach
                    if (bots[i].ProcessId > 0)
                    {
                        try
                        {
                            Process existingProcess = Process.GetProcessById(bots[i].ProcessId);
                            if (!existingProcess.HasExited)
                            {
                                bots[i].Process = existingProcess;
                                continue; // Don't remove, we reattached
                            }
                        }
                        catch
                        {
                            // Process doesn't exist anymore
                        }
                    }
                    
                    bots.RemoveAt(i);
                }
            }
            
            // Add all active bots to list with enhanced visual indicators
            foreach (var bot in bots)
            {
                if (bot.Process != null)
                {
                    try
                    {
                        bot.Process.Refresh();
                        
                        var item = new ListViewItem(bot.Name);
                        item.SubItems.Add(bot.Process.Id.ToString());
                        item.SubItems.Add(bot.DisplayStatus);
                        item.SubItems.Add(bot.IsHidden ? "Gizli" : "AÃ§Ä±k");
                        
                        // Enhanced color based on status
                        if (bot.Process.HasExited)
                        {
                            item.ForeColor = Color.Red;
                            item.BackColor = Color.FromArgb(255, 240, 240); // Light red background
                            item.SubItems[2].Text = "KapalÄ± âš«";
                        }
                        else if (bot.IsHidden)
                        {
                            item.ForeColor = Color.Blue;
                            item.BackColor = Color.FromArgb(235, 245, 255); // Light blue background
                            item.SubItems[2].Text = "Ã‡alÄ±ÅŸÄ±yor âœ“";
                            item.SubItems[3].Text = "Gizli ðŸ‘ï¸";
                        }
                        else
                        {
                            item.ForeColor = Color.Green;
                            item.BackColor = Color.FromArgb(240, 255, 240); // Light green background
                            item.SubItems[2].Text = "Ã‡alÄ±ÅŸÄ±yor âœ“";
                            item.SubItems[3].Text = "AÃ§Ä±k ðŸ–¥ï¸";
                        }
                        
                        // Set different font for the bot name
                        item.Font = new Font(this.Font.FontFamily, this.Font.Size, FontStyle.Bold);
                        
                        lvwBots.Items.Add(item);
                    }
                    catch
                    {
                        // Process may have just exited
                    }
                }
            }
            
            // Add alternating row colors if no items are colored yet
