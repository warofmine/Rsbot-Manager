        private void UpdateButtonStates()
        {
            bool hasSelection = lvwBots.SelectedItems.Count > 0;
            btnStop.Enabled = hasSelection;
            btnHideShow.Enabled = hasSelection;
            
            // Update button states based on the selected bot
            if (hasSelection)
            {
                string selectedBotName = lvwBots.SelectedItems[0].Text;
                var botInstance = bots.Find(b => b.Name == selectedBotName);
                
                if (botInstance != null && botInstance.Process != null && !botInstance.Process.HasExited)
                {
                    // Bot is running
                    btnStop.Enabled = true;
                    btnHideShow.Enabled = true;
                    
                    // Change button colors based on state
                    btnStop.ForeColor = Color.DarkRed;
                    btnStop.Font = new Font(this.Font, FontStyle.Bold);
                }
                else
                {
                    // Bot is not running
                    btnStop.Enabled = false;
                    btnHideShow.Enabled = false;
                    
                    btnStop.ForeColor = SystemColors.ControlText;
                    btnStop.Font = new Font(this.Font, FontStyle.Regular);
                }
            }
            else
            {
                // No selection, reset button states
                btnStop.ForeColor = SystemColors.ControlText;
                btnStop.Font = new Font(this.Font, FontStyle.Regular);
                btnHideShow.ForeColor = SystemColors.ControlText;
            }
            
            // Update the button text
            UpdateHideShowButtonText();
        }

